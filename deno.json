{
  "tasks": {
    "build": "deno task build-linux86 && deno task build-linuxarm && deno task build-mac86 && deno task build-macarm && deno task build-windows",
    "build-linuxarm": "deno compile --allow-read --allow-run --allow-env --allow-write --allow-net --target aarch64-unknown-linux-gnu --output bin/steamy-linux-arm64 ./src/main.ts",
    "build-linux86": "deno compile --allow-read --allow-run --allow-env --allow-write --allow-net --target x86_64-unknown-linux-gnu --output bin/steamy-linux-x86_64 ./src/main.ts",
    "build-macarm": "deno compile --allow-read --allow-run --allow-env --allow-write --allow-net --target aarch64-apple-darwin --output bin/steamy-mac-arm64 ./src/main.ts",
    "build-mac86": "deno compile --allow-read --allow-run --allow-env --allow-write --allow-net --target x86_64-apple-darwin --output bin/steamy-mac-x86_64 ./src/main.ts",
    "build-windows": "deno compile --allow-read --allow-run --allow-env --allow-write --allow-net --target x86_64-pc-windows-msvc --output bin/steamy-windows-x86_64.exe ./src/main.ts",
    "debug": "deno run --inspect-wait --allow-read --allow-run --allow-env --allow-write ./src/main.ts",
    "dev": "deno run --allow-read --allow-run --allow-env --allow-write ./src/main.ts",
    "format": "deno fmt",
    "qa": "deno test && deno fmt --check && deno lint",
    "test": "deno test",
    "test-with-coverage": "deno test --coverage && deno coverage --detailed",
    "types-check": "deno check ./src"
  },
  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@1.0.0-rc.7",
    "@cliffy/prompt": "jsr:@cliffy/prompt@1.0.0-rc.7",
    "@cliffy/table": "jsr:@cliffy/table@1.0.0-rc.7",
    "@std/assert": "jsr:@std/assert@1",
    "@std/async": "jsr:@std/async@1",
    "@std/io": "jsr:@std/io@^0.225.2",
    "@std/path": "jsr:@std/path@^1.1.3",
    "@std/testing/mock": "jsr:@std/testing@1/mock"
  },
  "fmt": {
    "indentWidth": 2,
    "singleQuote": true,
    "include": ["src/"]
  }
}
